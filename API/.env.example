# API Configuration Example
# Copy this file to .env and modify as needed

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Thread Pool Configuration
# Number of threads for executing SPARQL queries
THREAD_POOL_SIZE=4

# Query timeout in seconds
QUERY_TIMEOUT=30

# Query Limits
# Maximum query length in characters
MAX_QUERY_LENGTH=10240

# Maximum number of result rows (leave empty for no limit)
# MAX_RESULT_ROWS=10000

# Ontology Configuration
# Path to the populated ontology file
# ONTOLOGY_PATH=/path/to/mes_ontology_populated.owl

# Ontology IRI
ONTOLOGY_IRI=http://mes-ontology.org/factory.owl

# CORS Configuration
CORS_ENABLED=true
# Use ["*"] for all origins or specify specific origins
CORS_ORIGINS=["*"]

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format (Python logging format string)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s